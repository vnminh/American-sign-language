<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.signlanguageapplication.View.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_signRecognitionFragment"
            app:destination="@id/signRecognitionFragment" />
        <action
            android:id="@+id/action_homeFragment_to_dictionaryFragment"
            app:destination="@id/dictionaryFragment" />
    </fragment>

    <fragment
        android:id="@+id/signRecognitionFragment"
        android:name="com.example.signlanguageapplication.View.SignRecognitionFragment"
        android:label="Sign Recognition"
        tools:layout="@layout/fragment_sign_recognition" />

    <fragment
        android:id="@+id/dictionaryFragment"
        android:name="com.example.signlanguageapplication.View.DictionaryFragment"
        android:label="Dictionary"
        tools:layout="@layout/fragment_dictionary">
        <action
            android:id="@+id/action_dictionaryFragment_to_signDetailFragment"
            app:destination="@id/signDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/signDetailFragment"
        android:name="com.example.signlanguageapplication.View.SignDetailFragment"
        android:label="Sign Detail"
        tools:layout="@layout/fragment_sign_detail">
        <argument
            android:name="signId"
            app:argType="integer" />
        <argument
            android:name="signName"
            app:argType="string" />
    </fragment>
</navigation>